<div class="app-card-container contact-top">

  <div class="card">
    <h1>About Me</h1>

    <hr>

    <div class="row">
      <div class="col-md-5">

        <%= image_tag "SAYA1.jpg", width: 300, alt: "profile image", class: "profile-img" %>

        <div class="skills">
          <% @skills.each do |skill| %>
          <div class="skill">
            <h4><%= skill.title %></h4>
              <div class="progress">
                <div class="progress-bar progress-striped bg-warning"
                   role="progressbar"
                   aria-valuenow="<%= skill.percent_utilized %>"
                   aria-valuemax="100"
                   style="width: <%= skill.percent_utilized %>%"
                   ></div>
              </div>
            </div>
          <% end %>

        </div>

      </div>

      <div class="col-md-7">
          <p>She is Cute!</p>

          <p>
            <button
              class="btn btn-primary"
              type="button"
              data-toggle="collapse"
              data-target="#jobHistory"
              aria-expanded="false"
              aria-controller="jobHistory"
            >
            Job History
            </button>
          </p>

          <p>
            <button
              class="btn btn-primary"
              type="button"
              data-toggle="collapse"
              data-target="#education"
              aria-expanded="false"
              aria-controller="education"
            >
            Education
            </button>
          </p>

          <p>
            <div class="collapse" id="jobHistory">
              <div class="card card-block">
                jobbbbbssss steve
              </div>
              <div class="card card-block">
              stay hugry, stay foolish.
              </div>
              </div>

              <div class="collapse" id="education">
              <div class="card card-block">
                小学生
              </div>
              <div class="card card-block">
              ３年、どや
              </div>
              </div>
          </p>
      </div>
    </div>

  </div>

</div>




