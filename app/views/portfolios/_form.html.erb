<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= alerts_generator error %>
      <% end %>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: "form-control" %>
      </div>

      <div class="form-group">
      <label class="btn btn-primary">
        Upload a main image file <%= f.text_field :main_image, style: "display:none;" %>
      </label>
      </div>

      <div class="form-group">
      <label class="btn btn-primary">
        Upload a thumb image file <%= f.text_field :main_image, style: "display:none;" %> <%= f.text_field :thumb_image %>
        </label>
      </div>

    </div>

    <div class="col-md-6">
        <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control", rows: 13 %>
      </div>
    </div>
  </div>

  <hr>

  <div class="col-md-12">

  <h2>Technology Used:</h2>

    <div class="form-group">
      <%= f.fields_for :technologies do |technology_form| %>
      <div class="form-group">
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name, class: "form-control" %>
      </div>
      <% end %>
    </div>

    <div class="form-group, class: "form-control"">
      <%= f.submit "Save Portfolio Item", class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>
